<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>pjcrm_web</display-name>
	<context-param>
		<param-name>casEnabled</param-name>
		<param-value>false</param-value>
	</context-param>
	<servlet>
		<servlet-name>DispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:config/*-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>DispatcherServlet</servlet-name>
		<url-pattern>/xweb/*</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:config/spring-beans.xml</param-value>
	</context-param>
	<filter>
		<filter-name>Moniter</filter-name>
		<filter-class>enfo.crm.web.Moniter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Moniter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>Enfo Login Filter</filter-name>
		<filter-class>com.enfo.authentication.AuthenticationFilter</filter-class>
		<init-param>
			<param-name>loginUrl</param-name>
			<param-value>/login/login.jsp</param-value>
		</init-param>
		<init-param>
			<param-name>logoutUrl</param-name>
			<param-value>/login/logout.jsp</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Enfo Login Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>enfo.crm.web.UserInfo</listener-class>
	</listener>
	<servlet>
		<servlet-name>DisplayChart</servlet-name>
		<servlet-class>org.jfree.chart.servlet.DisplayChart</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>dwr-invoker</servlet-name>
		<servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>crossDomainSessionSecurity</param-name>
			<param-value>false</param-value>
		</init-param>
		<load-on-startup>100</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>dwr-invoker</servlet-name>
		<url-pattern>/dwr/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CheckCoderTool</servlet-name>
		<servlet-class>com.enfo.intrust.tools.CheckCoderTool</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CheckCoderTool</servlet-name>
		<url-pattern>/CheckCoder</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>600</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>/login/login.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>404</error-code>
		<location>/login/404.htm</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/login/error.jsp</location>
	</error-page>
	<error-page>
        <exception-type>org.apache.jasper.JasperException</exception-type>
        <location>/buserror.jsp</location>
    </error-page>
	<error-page>
        <exception-type>enfo.crm.dao.BusiException</exception-type>
        <location>/buserror.jsp</location>
    </error-page>
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.inc</url-pattern>
			<page-encoding>GBK</page-encoding>
		</jsp-property-group>
	</jsp-config>
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>InternationResouce</param-value>
	</context-param>
</web-app>