<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_card"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/x25"
              android:layout_marginLeft="@dimen/x15"
              android:layout_marginRight="@dimen/x15"
              android:background="#FF5E6F"
              android:orientation="vertical"
              android:paddingBottom="@dimen/y36"
              android:paddingLeft="@dimen/x46"
              android:paddingRight="@dimen/x46"
              android:paddingTop="@dimen/y42">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/y85"
            android:layout_height="@dimen/y85"/>

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextLimitsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x120"
            android:text="储蓄卡"
            android:textColor="@color/alpha_80_white"
            android:textSize="@dimen/text_14"/>

        <TextView
            android:id="@+id/tv_bankcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/y30"
            android:fontFamily="sans-serif"
            android:gravity="right|bottom"
            android:text="****"
            android:textColor="@color/white"
            android:textSize="@dimen/text_22"/>
    </RelativeLayout>
</LinearLayout>