<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/y25"
              android:layout_marginLeft="@dimen/x15"
              android:layout_marginRight="@dimen/x15">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/x15"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/y45"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:paddingTop="@dimen/y35">

                <ImageView
                    android:id="@+id/iv_bankIcon"
                    android:layout_width="@dimen/y65"
                    android:layout_height="@dimen/y65"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_bankName"
                    style="@style/TextLimitsStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/alpha_80_black"
                    android:textSize="@dimen/text_17"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x30"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:background="@color/color_f5f5f5"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x45"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x26"
                android:paddingTop="@dimen/x35">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="--"
                            android:textColor="@color/color_0A0A0A"
                            android:textSize="@dimen/text_17"/>

                        <ImageView
                            android:id="@+id/iv_interests"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/x15"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_interests"/>

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/iv_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x15"
                            android:src="@drawable/icon_cash"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买金额(元)"
                        android:textColor="@color/color_494949"
                        android:textSize="@dimen/text_12"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="实际收益"
                        android:textColor="@color/color_494949"
                        android:textSize="@dimen/text_12"/>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="right"
                        android:text="收益率"
                        android:textColor="@color/color_494949"
                        android:textSize="@dimen/text_12"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x40"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_totalReturn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="right"
                        android:text="+0.000000"
                        android:textColor="@color/color_ED403D"
                        android:textSize="@dimen/text_14"/>

                    <TextView
                        android:id="@+id/tv_returnRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="right"
                        android:text="0.00%"
                        android:textColor="@color/color_1D1D1D"
                        android:textSize="@dimen/text_13"/>
                </LinearLayout>


