<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_bg"
    android:orientation="vertical"
    tools:context="cn.zeppin.product.ntb.ui.bank.activity.PaySuccessActivity">

    <include layout="@layout/include_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/bg_white_radius"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y120"
            android:text="支付成功，申请处理中..."
            android:textColor="#2C2C2C"
            android:textSize="@dimen/text_18"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:text="2017年12月12日  12:45:20"
            android:textColor="#662C2C2C"
            android:textSize="@dimen/text_14"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y50"
            android:src="@drawable/pay_success"/>

        <Button
            android:id="@+id/btn_confirm"
            style="@style/ButtonStyle2_Small"
            android:layout_gravity="center_horizontal|bottom"
            android:text="我的持仓"/>
    </LinearLayout>
</LinearLayout>
