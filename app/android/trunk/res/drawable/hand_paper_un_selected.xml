<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="oval">

            <!-- 填充色 -->
            <solid android:color="#efefef" />

            <size android:height="@dimen/hand_paper_button_size" android:width="@dimen/hand_paper_button_size" />
        </shape></item>
    <item><shape android:shape="oval">

            <!-- 填充颜色 -->
            <solid android:color="@color/white"></solid>

            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="2dp" android:color="@color/grey"></stroke>

            <size android:height="@dimen/hand_paper_button_size" android:width="@dimen/hand_paper_button_size" />
        </shape></item>

</selector>