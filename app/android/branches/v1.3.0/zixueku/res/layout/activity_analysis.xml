<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.zixueku"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/analysis_action_bar" />

    <com.astuetz.PagerSlidingTabStrip3
        android:id="@+id/exercise_tabs"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        app:pstsDividerColor="@color/white"
        app:pstsDividerPadding="2dp"
        app:pstsIndicatorColor="@color/lightgrey"
        app:pstsIndicatorHeight="5dp"
        app:pstsShouldExpand="true"
        app:pstsTabPaddingLeftRight="1dp"
        app:pstsUnderlineColor="@color/transparent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/exercise_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.astuetz.PagerSlidingTabStrip4
        android:id="@+id/exercise_tabs2"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:visibility="gone"
        app:pstsDividerColor="@color/white"
        app:pstsDividerPadding="2dp"
        app:pstsIndicatorColor="@color/lightgrey"
        app:pstsIndicatorHeight="5dp"
        app:pstsShouldExpand="true"
        app:pstsTabPaddingLeftRight="1dp"
        app:pstsUnderlineColor="@color/transparent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/exercise_pager2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/no_error_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="全做对了！"
        android:visibility="gone" />

</LinearLayout>