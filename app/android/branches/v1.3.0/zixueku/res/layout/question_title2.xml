<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ExerciseTipLayoutStyle" >

    <TextView
        android:id="@+id/type_name"
        style="@style/ExerciseTypeNameTextStyle" />

    <View style="@style/ExerciseTipSplitLine" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/num_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/current_num"
                style="@style/s6" />

            <TextView
                style="@style/s6"
                android:text="/" />

            <TextView
                android:id="@+id/total_num"
                style="@style/s6"
                android:layout_marginRight="25dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/source_from"
            style="@style/ExerciseSourceNameTextStyle"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

</LinearLayout>