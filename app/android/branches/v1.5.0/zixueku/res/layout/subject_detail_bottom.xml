<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_gravity="bottom"
    android:background="@color/white" >

    <View
        style="@style/HorizontalLine"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dp" >

        <!-- 专项练习 -->

        <LinearLayout
            android:id="@+id/knowledge_test_button_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/knowledge_test_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/knowledge_test_icon" />

            <TextView
                android:id="@+id/knowledge_test_text"
                style="@style/s8"
                android:layout_marginTop="3dp"
                android:text="专项练习"
                android:textColor="@color/dimgrey" />
        </LinearLayout>

        <!-- 大题特训 -->

        <LinearLayout
            android:id="@+id/subject_item_type__button_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/special_test_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/special_test_icon" />

            <TextView
                android:id="@+id/special_test_text"
                style="@style/s8"
                android:layout_marginTop="3dp"
                android:text="大题特训"
                android:textColor="@color/dimgrey" />
        </LinearLayout>

        <!-- 模拟考试 -->

        <LinearLayout
            android:id="@+id/paper_test__button_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/paper_test_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/special_test_icon" />

            <TextView
                android:id="@+id/paper_test_text"
                style="@style/s8"
                android:layout_marginTop="3dp"
                android:text="模拟考试"
                android:textColor="@color/dimgrey" />
        </LinearLayout>

        <!-- 错题本 -->

        <LinearLayout
            android:id="@+id/wrong_book__button_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/wrong_book_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/special_test_icon" />

            <TextView
                android:id="@+id/wrong_book_text"
                style="@style/s8"
                android:layout_marginTop="3dp"
                android:text="错题本"
                android:textColor="@color/dimgrey" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>