<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.zixueku"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/exercise_action_bar"
        layout="@layout/exercise_action_bar" />

    <include
        android:id="@+id/hand_paper_action_bar"
        layout="@layout/action_bar"
        android:visibility="gone" />

    <com.astuetz.PagerSlidingTabStrip2
        android:id="@+id/exercise_tabs"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        app:pstsDividerColor="@color/white"
        app:pstsDividerPadding="2dp"
        app:pstsIndicatorColor="@color/green"
        app:pstsIndicatorHeight="5dp"
        app:pstsShouldExpand="true"
        app:pstsTabBackground="@color/transparent"
        app:pstsTabPaddingLeftRight="1dp"
        app:pstsUnderlineColor="@color/transparent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/exercise_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>