<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.zixueku"
    android:id="@+id/head_background"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/image1"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/circular" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/brush_item_count"
                    style="@style/s7"
                    android:includeFontPadding="false"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/s7"
                    android:includeFontPadding="false"
                    android:text="@string/brush_item_count_text"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="2" >

            <com.pascalwelsch.holocircularprogressbar.HoloCircularProgressBar
                android:id="@+id/knowledge_circle_imageview"
                style="@style/CircularProgressBar"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                app:progress="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical" >
            

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="45sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:includeFontPadding="false"
                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
            
            <TextView  
                  style="@style/s7"
                  android:includeFontPadding="false"
                  android:text="备考进度"
                  android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/circular" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/correct_rate"
                    style="@style/s7"
                    android:includeFontPadding="false"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/s7"
                    android:includeFontPadding="false"
                    android:text="正确率"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- 距离考试 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp" >

        <TextView
            style="@style/s7"
            android:text="@string/next_exams_remain_day_text"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/next_testday_count"
            style="@style/s6"
            android:textColor="@color/yellow" />

        <TextView
            style="@style/s7"
            android:text="@string/day"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/rank_text"
            style="@style/s7"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>