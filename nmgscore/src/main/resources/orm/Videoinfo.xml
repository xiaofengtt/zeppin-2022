<?xml version="1.0" encoding="UTF-8" ?>    
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
    
<mapper namespace="com.cmos.china.mobile.media.core.bean.Videoinfo">

	<!-- 根据参数取count -->
	<select id="videoinfo_getCountByParams" parameterType="java.util.Map" resultType="int">
		select count(*) from videoinfo where 1=1
		<if test="id != null and id != ''">
			and id = #{id} 
		</if>
		<if test="title != null and title != ''">
			and title like "%"#{title}"%" 
		</if>
		<if test="status != null and status != ''">
			and status = #{status} 
		</if>
	</select> 
	
	<!-- 根据参数取vo -->
	<select id="videoinfo_getListByParams" parameterType="java.util.Map" resultType="com.cmos.china.mobile.media.core.vo.VideoinfoVO">
		select v.id, v.title, v.context, v.tag, v.status, v.thumbnail, v.video, v.time_length as timeLength, v.source, v.copyright, v.author, u.name as creatorName, v.createtime, v.sequence, r.path as originalVideoPath, r.url as originalVideoUrl, r.dpi as originalVideoDpi 
		from videoinfo v , sys_user u , resource r 
		where v.creator=u.id and v.original_video=r.id 
		<if test="id != null and id != ''">
			and v.id = #{id} 
		</if>
		<if test="title != null and title != ''">
			and v.title like "%"#{title}"%" 
		</if>
		<if test="status != null and status != ''">
			and v.status = #{status} 
		</if>
		<if test="sort != null and sort != ''">
			order by ${sort}
		</if>
		<if test="start != null and start != '' and limit != null and limit != ''">
			limit ${start},${limit}
		</if>
	</select> 
	
	<!-- 按照状态分类取count -->
	<select id="videoinfo_getStatusCount" resultType="Map">
		select status , count(status) from videoinfo where 1=1
		<if test="title != null and title != ''">
			and title like "%"#{title}"%" 
		</if>
		group by status
	</select> 
	
	<!-- 加载数据 -->  
	<select id="videoinfo_get"  resultType="com.cmos.china.mobile.media.core.bean.Videoinfo">  
		select * from videoinfo where id=#{id}  
	</select>  
	
	<!-- 增加数据 -->  
	<insert id="videoinfo_add" parameterType="com.cmos.china.mobile.media.core.bean.Videoinfo" useGeneratedKeys="true" keyProperty="id">  
		insert into videoinfo(id,title,context,tag,status,thumbnail,video,time_length,transcoding_flag,original_video,source,copyright,author,creator,createtime,sequence) 
		values(#{id},#{title},#{context},#{tag},#{status},#{thumbnail},#{video},#{timeLength},#{transcodingFlag},#{originalVideo},#{source},#{copyright},#{author},#{creator},#{createtime},#{sequence})  
	</insert>
	  
	<!-- 修改数据 -->  
	<update id="videoinfo_update" parameterType="com.cmos.china.mobile.media.core.bean.Videoinfo">  
		update videoinfo 
		set title=#{title},context=#{context},tag=#{tag},status=#{status},thumbnail=#{thumbnail},video=#{video},time_length=#{timeLength},transcoding_flag=#{transcodingFlag},original_video=#{originalVideo},source=#{source},copyright=#{copyright},author=#{author},sequence=#{sequence} 
		where id=#{id}  
	</update>  
	
	<!-- 删除数据 -->  
	<update id="videoinfo_delete" parameterType="com.cmos.china.mobile.media.core.bean.Videoinfo">  
		update videoinfo set status='destroy' where id=#{id}
	</update>  
</mapper>  