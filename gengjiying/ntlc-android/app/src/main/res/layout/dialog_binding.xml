<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x150"
        android:layout_marginRight="@dimen/x150"
        android:background="@drawable/bg_white_radius"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y60"
        android:paddingTop="@dimen/y85">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            android:text="您还未绑定银行卡！"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/text_18"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x70"
            android:src="@drawable/unbind_bankcard"/>

        <Button
            android:id="@+id/btn_confirm"
            style="@style/ButtonStyle2_Small"
            android:layout_margin="0dp"
            android:paddingLeft="@dimen/x60"
            android:paddingRight="@dimen/x60"
            android:text="马上绑卡"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y90"
        android:padding="@dimen/x30"
        android:src="@drawable/icon_delete_white"/>
</LinearLayout>