/* certification.wxss */
page{
  background: #eee
}

.top-view{
  height: 80rpx;
  margin-bottom: 20rpx;
  line-height: 80rpx;
  background: #fff;
}

.top-view image{
  margin: 0 10rpx 0 20rpx;
  width: 22rpx;
  height: 22rpx;
}

.top-view text{
  color: rgba(0, 0, 0, 0.8);
  font-size: 28rpx;
}

.main-view{
  width: 100%;
}

.main-view .input-view{
  width: 100%;
  margin-bottom: 20rpx;
  background: #fff;
}

.main-view .input-view .tr{
  position: relative;
  height: 100rpx;
  border-bottom: 1px solid #eee;
}

.main-view .input-view .tr label{
  position: absolute;
  top: 0;
  left: 26rpx;
  font-size: 30rpx;
  line-height: 100rpx;
}

.main-view .input-view .tr input{
  position: absolute;
  top: 0;
  left: 140rpx;
  width: 500rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
}

.main-view .photo-view{
  width: 100%;
  padding-bottom: 40rpx;
  background: #fff;
}

.main-view .photo-view .title{
  width: 100%;
  margin-left: 26rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #000;
}

.main-view .photo-view .photo{
  width: 540rpx;
  height: 220rpx;
  margin: 20rpx auto 20rpx 120rpx;
  background: #F4F4F4;
  text-align: center;
}

.main-view .photo-view .photo image.icon{
  width: 36rpx;
  height: 36rpx;
  margin: 70rpx auto 10rpx auto;
}

.main-view .photo-view .photo text{
  display: block;
  line-height: 34rpx;
  font-size: 26rpx;
  color: #008DFB;
}

.main-view .photo-view .photo image.photo-image{
  width: 100%;
  height: 100%;
}

.main-view .note-view{
  width: 100%;
  margin-left: 26rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.4);
}

.main-view .submit-view .submit-row{
  height: 100rpx;
  margin: 0 26rpx 30rpx 26rpx;
}

.main-view .submit-view .submit-row button{
  width: 100%;
  height: 100%;
  background: #008DFB;
  color: #FFF;
  line-height: 100rpx;
  font-size: 36rpx;
}