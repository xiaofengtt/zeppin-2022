/* pages/bankcardRemove/bankcardRemove.wxss */
page{
  background: #eee;
}

.top-view{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #FFF;
}

.top-view image{
  width: 22rpx;
  height: 20rpx;
  margin-left: 20rpx;
}

.top-view text{
  margin-left: 14rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.8);
}

.main-view{
  width: 100%;
  margin-top: 20rpx;
}

.main-view .tr{
  position: relative;
  width: 100%;
  height: 100rpx;
  background: #FFF;
  border-bottom: 1px solid #eee;
}

.main-view .tr label{
  position: absolute;
  top: 0;
  left: 26rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.8);
}

.main-view .tr input{
  position: absolute;
  top: 0;
  left: 160rpx;
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
}

.main-view .tr text{
  position: absolute;
  right: 28rpx;
  top: 30rpx;
  color: #008DFB;
  line-height: 40rpx;
  font-size: 28rpx;
}

.main-view .tr text.disabled{
  color: #ADADAD;
}

.main-view .tr view.bank{
  position: absolute;
  top: 0;
  left: 160rpx;
  width: 500rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
}

.main-view .tr image{
  position: absolute;
  top: 32rpx;
  right: 24rpx;
  width: 18rpx;
  height: 28rpx;
}

.main-view .tr text.disabled{
  color: #ADADAD;
}

.main-view .submit-tr{
  width: 100%;
  height: 100rpx;
  margin-top: 60rpx;
  text-align: center;
}

.main-view .submit-tr button{
  width: 700rpx;
  height: 100%;
  background: #008DFB;
  color: #FFF;
  line-height: 100rpx;
  font-size: 36rpx;
}

.main-view .submit-tr button.disabled{
  background: #D0D0D0;
}