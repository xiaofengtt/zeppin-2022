/* pages/myProduct/myProduct.wxss */
page{
  background: #eee;
}

.top-view{
  position: relative;
  width: 100%;
  height: 170rpx;
  padding: 40rpx 30rpx 0 30rpx;
  text-align: left;
  background: #FFF;
}

.top-view .text{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.5);
}

.top-view .number{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 52rpx;
  color: #F6A623;
}

.top-view image{
  position: absolute;
  right: 50rpx;
  top: 50rpx;
  width: 92rpx;
  height: 82rpx;
}

.table-view{
  width: 100%;
  margin-top: 20rpx;
}

.table-view .title{
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background: #fff;
}

.table-view .title view{
  display: inline-block;
}

.table-view .title .split{
  width: 6rpx;
  height: 28rpx;
  background: #008DFB;
}

.table-view .title .text{
  position: absolute;
  width: 200rpx;
  margin-left: 10rpx;
  color: #000;
  font-size: 28rpx;
}

.table-view .tr{
  height: 80rpx;
  padding: 0 20rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 1px;
}

.table-view .tr .key{
  display: inline-block;
  width: 150rpx;
  text-align: left;
  color: rgba(0, 0, 0, 0.6);
  vertical-align: top;
}

.table-view .tr .value{
  display: inline-block;
  width: 550rpx;
  text-align: right;
  color: rgba(0, 0, 0, 0.8);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.table-view .tr .light{
  color: #008DFB;
  opacity: 0.8;
}