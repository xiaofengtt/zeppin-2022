/* pages/bankcardChoose/bankcardChoose.wxss */
page{
  background: #eee;
}

.data-table{
  width: 100%;
}

.data-table .tr{
  position: relative;
  width: 100%;
  height: 100rpx;
  padding: 0 26rpx;
  margin-bottom: 1px;
  background: #FFF;
}

.data-table .tr image.icon{
  width: 52rpx;
  height: 52rpx;
  margin-top: 28rpx;
}

.data-table .tr .info{
  display: inline-block;
  margin-left: 20rpx;
}

.data-table .tr .info .name{
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.8);
}

.data-table .tr .info .card{
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.3);
}

.data-table image.selected{
  position: absolute;
  right: 26rpx;
  top: 36rpx;
  width: 44rpx;
  height: 28rpx;
}

.data-table .tr-add{
  position: relative;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 26rpx;
  margin-bottom: 1px;
  background: #FFF;
}

.data-table .tr-add image.add{
  display: inline-block;
  width: 42rpx;
  height: 42rpx;
  margin-right: 20rpx;
  vertical-align: text-bottom;
}

.data-table .tr-add text{
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.8);
}

.data-table .tr-add image.arrow{
  float: right;
  width: 14rpx;
  height: 22rpx;
  margin-top: 38rpx;
}


.submit-view view{
  width: 700rpx;
  height: 100%;
  margin: 68rpx auto 0 auto;
  background: #008DFB;
  color: #FFF;
  line-height: 100rpx;
  font-size: 36rpx;
  text-align: center;
  border-radius: 10rpx;
}