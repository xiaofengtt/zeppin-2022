/* pages/recharge/recharge.wxss */
page{
  background: #eee;
}

.bankcard-view{
  width: 100%;
  background: #FFF;
}

.bankcard-view .card{
  width: 100%;
  height: 60rpx;
  line-height: 20rpx;
  padding: 0 30rpx;
}

.bankcard-view .card text{
  padding-left: 64rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
}

.bankcard-view .card image{
  float: right;
  width: 18rpx;
  height: 28rpx;
}

.other-view{
  width: 100%;
  margin-top: 20rpx;
  background: #FFF;
}

.bankcard-view .type,
.other-view .type{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 26rpx;
}

.bankcard-view .type image,
.other-view .type image{
  height: 48rpx;
  width: 48rpx;
  vertical-align: text-top;
}

.bankcard-view .type text,
.other-view .type text{
  padding-left: 16rpx;
  font-size: 30rpx;
  color: #000;
}

.bankcard-view .type view,
.other-view .type view{
  float: right;
  width: 32rpx;
  height: 32rpx;
  border-radius: 32rpx;
  margin-top: 36rpx;
  border: 1px solid #B4B4B4;
}

.bankcard-view .type view.selected,
.other-view .type view.selected{
  background: no-repeat center url('data:image/png;base64,');
  background-size: 32rpx 32rpx;
  border: 0;
}

.amount-view{
  position: relative;
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  background: #FFF;
}
.amount-view label{
  display: inline-block;
  margin: 0 30rpx 0 20rpx; 
  line-height: 100rpx;
  font-size: 30rpx;
  text-align: left;
  vertical-align: top;
}

.amount-view input{
  display: inline-block;
  width: 70%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  text-align: left;
}

.warn-view{
  width: 100%;
  height: 60rpx;
}

.warn-view > view{
  display: inline-block;
  height: 100%;
  line-height: 60rpx;
}

.warn-view .balance{
  margin-left: 26rpx;
}

.warn-view .error{
  margin-left: 46rpx;
}

.warn-view image{
  width: 26rpx;
  height: 24rpx;
}

.warn-view text{
  margin-left: 8rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.7);
}

.warn-view .error text{
  color: #D0011B;
}

.tr{
  position: relative;
  width: 100%;
  height: 100rpx;
  background: #FFF;
  border-bottom: 1px solid #eee;
}

.tr label{
  position: absolute;
  top: 0;
  left: 26rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.8);
}

.tr input{
  position: absolute;
  top: 0;
  left: 160rpx;
  width: 60%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
}

.tr text{
  position: absolute;
  right: 28rpx;
  top: 30rpx;
  color: #008DFB;
  line-height: 40rpx;
  font-size: 28rpx;
}

.tr text.disabled{
  color: #ADADAD;
}

.submit-view{
  width: 100%;
  height: 100rpx;
  margin-top: 80rpx
}

.submit-view button{
  width: 700rpx;
  height: 100%;
  margin: 0 auto;
  background: #008DFB;
  color: #FFF;
  line-height: 100rpx;
  font-size: 36rpx;
}

.submit-view button.disabled{
  background: #D0D0D0;
  color: #FFF;
}