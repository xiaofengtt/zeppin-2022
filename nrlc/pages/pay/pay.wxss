/* pay.wxss */
page{
  background: #eee;
}

.top-view{
  width: 100%;
  background: #FFF;
}

.top-view .tr{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 10rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.8);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border-bottom: 1px solid #eee;
}

.top-view .tr text{
  padding-left: 10rpx;
}

.label-view{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #000;
}

.balance-view{
  width: 100%;
  background: #FFF;
}


.balance-label{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 26rpx;
}

.balance-label image{
  width: 26rpx;
  height: 24rpx;
}

.balance-label text{
  margin-left: 8rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.7);
}

.balance-label .error{
  display: inline-block;
  margin-left: 46rpx;
}

.balance-label .error text{
  color: #D0011B;
}

.bankcard-view{
  width: 100%;
  background: #FFF;
}

.bankcard-view .card{
  width: 100%;
  height: 60rpx;
  line-height: 20rpx;
  padding: 0 30rpx;
}

.bankcard-view .card text{
  padding-left: 64rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
}

.bankcard-view .card image{
  float: right;
  width: 18rpx;
  height: 28rpx;
}

.other-view{
  width: 100%;
  margin-top: 20rpx;
  background: #FFF;
}

.balance-view .type,
.bankcard-view .type,
.other-view .type{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 26rpx;
}

.balance-view .type image,
.bankcard-view .type image,
.other-view .type image{
  height: 48rpx;
  width: 48rpx;
  vertical-align: text-top;
}

.balance-view .type text,
.bankcard-view .type text,
.other-view .type text{
  padding-left: 16rpx;
  font-size: 30rpx;
  color: #000;
}

.balance-view .type view,
.bankcard-view .type view,
.other-view .type view{
  float: right;
  width: 32rpx;
  height: 32rpx;
  border-radius: 32rpx;
  margin-top: 36rpx;
  border: 1px solid #B4B4B4;
}

.balance-view .type view.selected,
.bankcard-view .type view.selected,
.other-view .type view.selected{
  background: no-repeat center url('data:image/png;base64,');
  background-size: 32rpx 32rpx;
  border: 0;
}

.submit-view{
  width: 100%;
  height: 100rpx;
  margin-top: 80rpx
}

.submit-view button{
  width: 700rpx;
  height: 100%;
  margin: 0 auto;
  background: #008DFB;
  color: #FFF;
  line-height: 100rpx;
  font-size: 36rpx;
}

.pay-view{
  position: fixed;
  top:0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 100;
  background: rgba(0, 0, 0, 0.5)
}

.pay-view .frame{
  position: relative;
  width: 550rpx;
  margin: 300rpx auto 0 auto;
  background: #FFF;
  border-radius: 10rpx;
  overflow: hidden;
}

.pay-view .frame .title{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 40rpx;
  font-size: 36rpx;
  color: #000;
  text-align: center;
}

.pay-view .frame .message{
  width: 100%;
  line-height: 40rpx;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.8);
  text-align: center;
}

.pay-view .frame .code{
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
}

.pay-view .frame .code input{
  display: inline-block;
  width: 200rpx;
  height: 60rpx;
  margin: 20rpx 30rpx 0 50rpx;
  padding: 0 20rpx; 
  font-size: 28rpx;
  border: 1px solid #DDD;
  box-sizing: border-box;
}   

.pay-view .frame .code label{
  display: inline-block;
  width: 220rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  text-align: center;
  color: #008DFB;
  background: #eee;
  vertical-align: top
}

.pay-view .frame .code label.disabled{
  color: rgba(0, 0, 0, 0.5);
}

.pay-view .frame .buttons{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 30rpx;
}

.pay-view .frame .buttons view{
  display: inline-block;
  width: 50%;
  height: 100%;
  font-size: 36rpx;
  text-align: center;
}

.pay-view .frame .buttons view.confirm{
  background: #008DFB;
  color: #FFF;
}

.pay-view .frame .buttons view.cancle{
  border-top: 1px solid #eee;
}