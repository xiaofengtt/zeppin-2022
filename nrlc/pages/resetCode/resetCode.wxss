/* resetCode.wxss */
.main-view .tr{
  width: 100%;
  height: 120rpx;
}

.main-view .tr .data-row{
  position: relative;
  height: 100%;
  margin: 0 50rpx;
  border-bottom: 1px solid rgba(176, 176, 176, 0.3);
}

.main-view .tr .data-row image{
  position: absolute;
  left: 0;
  bottom: 10rpx;
  width: 34rpx;
  height: 38rpx;
  background: transparent;
}

.main-view .tr .data-row input{
  position: absolute;
  left: 50rpx;
  bottom: 0;
  height: 50rpx;
  width: 500rpx;
  font-size: 32rpx;
}

.main-view .tr .data-row text{
  position: absolute;
  right: 0;
  bottom: 0;
  color: #008DFB;
  line-height: 56rpx;
  font-size: 28rpx;
}

.main-view .tr .data-row text.disabled{
  color: #ADADAD;
}

.main-view .tr-submit{
  margin-top: 70rpx;
  width: 100%;
  height: 100rpx;
}

.main-view .tr-submit .submit-row{
  height: 100rpx;
  margin: 0 50rpx;
}

.main-view .tr-submit .submit-row button{
  width: 100%;
  height: 100%;
  background: #008DFB;
  color: #FFF;
  line-height: 100rpx;
  font-size: 36rpx;
}