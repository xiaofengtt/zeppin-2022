/* register.wxss */
.top-view{
  width: 100%;
  height: 260prx;
  text-align: center;
  background: transparent;
}

.top-view image{
  height: 100rpx;
  width: 100rpx;
  margin: 80rpx auto 16rpx auto;
}

.top-view text{
  display: block;
  width: 100%;
  color: #000000;
  font-size: 32rpx;
  line-height: 40rpx;
}

.main-view .tr{
  width: 100%;
  height: 110rpx;
}

.main-view .tr .data-row{
  position: relative;
  height: 100%;
  margin: 0 50rpx;
  border-bottom: 1px solid rgba(176, 176, 176, 0.3);
}

.main-view .tr .data-row image{
  position: absolute;
  left: 0;
  bottom: 10rpx;
  width: 34rpx;
  height: 38rpx;
}

.main-view .tr .data-row input{
  position: absolute;
  left: 50rpx;
  bottom: 0;
  height: 50rpx;
  width: 80%;
  font-size: 32rpx;
}

.main-view .tr .data-row text{
  position: absolute;
  right: 0;
  bottom: 0;
  color: #008DFB;
  line-height: 56rpx;
  font-size: 28rpx;
}

.main-view .tr .data-row text.disabled{
  color: #ADADAD;
}

.main-view .tr-submit{
  margin-top: 80rpx;
  width: 100%;
  height: 100rpx;
}

.main-view .tr-submit .submit-row{
  height: 100rpx;
  margin: 0 50rpx;
}

.main-view .tr-submit .submit-row button{
  width: 100%;
  height: 100%;
  background: #008DFB;
  color: #FFF;
  line-height: 100rpx;
  font-size: 36rpx;
}

.foot-view{
  position: fixed;
  left: 0;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #949494;
}

.foot-view text{
  color: #008DFB;
}